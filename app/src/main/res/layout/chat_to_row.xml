<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
android:layout_marginBottom="12dp">

    <TextView
            android:text="This is my sample message wrap on multiple lines."
            android:layout_width="wrap_content"
            android:maxWidth="240dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:id="@+id/textView_to_row"
            android:background="@drawable/rounded_edittext_register_login"
            app:layout_constraintTop_toTopOf="@+id/imageView_chat_to"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/imageView_chat_to"/>
    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            app:civ_border_color="@android:color/white"
            app:civ_border_width="2dp"
            android:layout_height="50dp" app:srcCompat="@android:drawable/btn_star_big_on"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" android:id="@+id/imageView_chat_to" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
</android.support.constraint.ConstraintLayout>